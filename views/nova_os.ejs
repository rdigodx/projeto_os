<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8" />
  <title>Abrir Nova OS</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- CSS -->
  <link rel="stylesheet" href="/css/style.css" />
  <link rel="stylesheet" href="/css/nova_os.css" />

  <!-- Font Awesome -->
  <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
  />
</head>

<body>

  <!-- HEADER -->
  <header>
    <div class="header-container">
      <h1>Abrir Nova Ordem de Serviço</h1>

      <nav class="nav-container">
        <a href="/"><i class="fas fa-home"></i> Home</a>
        <a href="/login"><i class="fas fa-user"></i> Login Técnico</a>
      </nav>
    </div>
  </header>

  <!-- MAIN -->
  <main class="main-container">
    <section class="form-container">
      <%- include('partials/alerts') %>
      <div id="clientFormFeedback" class="form-feedback-slot" aria-live="polite"></div>

      <form method="POST" action="/os/criar" enctype="multipart/form-data">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <!-- GRID ERP -->
        <div class="form-grid">

          <!-- NOME -->
          <div class="form-group">
            <label class="required">
              <i class="fas fa-user"></i> Nome do Solicitante
            </label>
            <select name="nome" required>
              <option value="" disabled selected>Selecione o solicitante</option>
              <option value="Ariana Lima">Ariana Lima</option>
              <option value="Betânia">Betânia</option>
              <option value="Bruna">Bruna</option>
              <option value="Camila Fernandes">Camila Fernandes</option>
              <option value="Camylla Cristina">Camylla Cristina</option>
              <option value="Dalma">Dalma</option>
              <option value="Douglas">Douglas</option>
              <option value="Emily">Emily</option>
              <option value="Érica">Érica</option>
              <option value="Erick Borges">Erick Borges</option>
              <option value="Juan Teodoro">Juan Teodoro</option>
              <option value="Kesley Mamedes">Kesley Mamedes</option>
              <option value="Leonardo">Leonardo</option>
              <option value="Lizianne">Lizianne</option>
              <option value="Miguel">Miguel</option>
              <option value="Patrícia">Patrícia</option>
              <option value="Paulo Faraone">Paulo Faraone</option>
              <option value="Pâmella">Pâmella</option>
              <option value="Técnicos">Técnicos</option>
              <option value="Rafael">Rafael</option>
              <option value="Ricardo Soares">Ricardo Soares</option>
              <option value="Rayane">Rayane</option>
              <option value="Vinícius">Vinícius</option>
              <option value="Vitor Paulo">Vitor Paulo</option>
              <option value="Willian Valério">Willian Valério</option>
            </select>
          </div>

          <!-- SETOR -->
          <div class="form-group">
            <label class="required">
              <i class="fas fa-building"></i> Setor
            </label>
            <select name="setor" required>
              <option value="" disabled selected>Selecione o setor</option>
              <option value="Assistência Técnica">Assistência Técnica</option>
              <option value="Comercial">Comercial</option>
              <option value="Compras">Compras</option>
              <option value="Diretoria">Diretoria</option>
              <option value="Estoque">Estoque</option>
              <option value="Faturamento">Faturamento</option>
              <option value="Financeiro">Financeiro</option>
              <option value="Recepção">Recepção</option>
              <option value="Suporte Técnico">Suporte Técnico</option>
              <option value="Vendas">Vendas</option>
            </select>
          </div>

          <!-- TIPO DE SERVIÇO -->
          <div class="form-group">
            <label class="required">
              <i class="fas fa-tools"></i> Tipo de Serviço
            </label>
            <input
              type="text"
              name="tipo_servico"
              placeholder="Ex: Manutenção, Software..."
              required
            />
          </div>

          <!-- PRIORIDADE -->
          <div class="form-group">
            <label class="required">
              <i class="fas fa-bolt"></i> Prioridade
            </label>
            <select name="prioridade" required>
              <option value="media" selected>Média (5h)</option>
              <option value="baixa">Baixa (10h)</option>
              <option value="alta">Alta (2h)</option>
              <option value="critica">Crítica (1h)</option>
            </select>
          </div>

          <!-- DESCRIÇÃO -->
          <div class="form-group full">
            <label class="required">
              <i class="fas fa-file-alt"></i> Descrição do Problema
            </label>
            <textarea
              name="descricao"
              placeholder="Descreva detalhadamente o problema..."
              maxlength="500"
              required
            ></textarea>
            <span class="char-counter">0 / 500</span>
          </div>

          <!-- EMAIL -->
          <div class="form-group">
            <label>
              <i class="fas fa-envelope"></i> E-mail para notificação
            </label>
            <input
              type="email"
              name="email"
              placeholder="seu.email@empresa.com"
            />
          </div>

          <!-- ANEXO -->
          <div class="form-group">
            <label>
              <i class="fas fa-paperclip"></i> Anexar Arquivo
            </label>
            <input
              type="file"
              name="anexos"
              accept=".pdf,.jpg,.jpeg,.png,.doc,.docx,.xls,.xlsx"
              multiple
            />
          </div>

        </div>

        <!-- BOTÃO -->
        <div class="btn-container">
          <button type="submit" class="btn-submit">
            <i class="fas fa-plus-circle"></i> Abrir OS
          </button>
        </div>

      </form>
    </section>
  </main>

  <script src="/js/nova_osScripts.js"></script>
</body>
</html>
